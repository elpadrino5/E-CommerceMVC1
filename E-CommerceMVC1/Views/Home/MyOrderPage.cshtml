@model IEnumerable<E_CommerceMVC1.Models.OrderPost_fe>

@{
    ViewBag.Title = "MyOrderPage";
}

<h2>My Orders</h2>
<br />

<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.OrderId)*@
            Order Number
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.ItemQty)*@
            Items Quantity
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    var orderId = @Html.ValueFor(modelItem => item.OrderId).ToString();
    <tr>
        <td>
            @Html.ActionLink(orderId, "ConfirmationPage", new { id=item.OrderId })
            @*@Html.DisplayFor(modelItem => item.OrderId)*@
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ItemQty)
        </td>
        <td>
            $@Html.DisplayFor(modelItem => item.Total)
        </td>
    </tr>
}

</table>
